# Запрещаем листинг директории
Options -Indexes

# Разрешаем доступ только к определенным типам файлов
<FilesMatch "\.(pdf|doc|docx|jpg|jpeg|png|txt)$">
    Order Allow,Deny
    Allow from all
</FilesMatch>

# Для Apache 2.4+
<IfModule mod_authz_core.c>
    <FilesMatch "\.(pdf|doc|docx|jpg|jpeg|png|txt)$">
        Require all granted
    </FilesMatch>
</IfModule>

# Для старых версий Apache
<IfModule !mod_authz_core.c>
    <FilesMatch "\.(pdf|doc|docx|jpg|jpeg|png|txt)$">
        Order Allow,Deny
        Allow from all
    </FilesMatch>
</IfModule>

# Запрещаем выполнение PHP
<FilesMatch "\.php$">
    Order Deny,Allow
    Deny from all
</FilesMatch>

