# Разрешаем доступ к видео файлам
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Разрешаем доступ к файлам видео
    <FilesMatch "\.(mp4|avi|mov|wmv|flv|webm)$">
        Order Allow,Deny
        Allow from all
    </FilesMatch>
    
    # Устанавливаем правильные заголовки для видео
    <FilesMatch "\.(mp4|avi|mov|wmv|flv|webm)$">
        Header set Cache-Control "public, max-age=31536000"
        Header set Access-Control-Allow-Origin "*"
        Header set Accept-Ranges "bytes"
    </FilesMatch>
</IfModule>

# Альтернативная конфигурация для Apache 2.4+
<IfModule mod_authz_core.c>
    <FilesMatch "\.(mp4|avi|mov|wmv|flv|webm)$">
        Require all granted
    </FilesMatch>
</IfModule>

# Для старых версий Apache
<IfModule !mod_authz_core.c>
    <FilesMatch "\.(mp4|avi|mov|wmv|flv|webm)$">
        Order Allow,Deny
        Allow from all
    </FilesMatch>
</IfModule>
